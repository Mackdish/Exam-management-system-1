    <script>
        // Initialize charts
        document.addEventListener('DOMContentLoaded', function() {
            // Performance Chart
            const ctx = document.getElementById('performanceChart').getContext('2d');
            const performanceChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Form 1', 'Form 2', 'Form 3', 'Form 4'],
                    datasets: [
                        {
                            label: 'East Stream',
                            data: [72.5, 75.2, 76.8, 78.2],
                            backgroundColor: 'rgba(52, 152, 219, 0.7)',
                            borderColor: 'rgba(52, 152, 219, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'West Stream',
                            data: [70.8, 73.6, 75.4, 76.9],
                            backgroundColor: 'rgba(46, 204, 113, 0.7)',
                            borderColor: 'rgba(46, 204, 113, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: false,
                            min: 60,
                            title: {
                                display: true,
                                text: 'Average Score (%)'
                            }
                        }
                    }
                }
            });
            
            // Stream tabs functionality
            const streamTabs = document.querySelectorAll('.stream-tab');
            streamTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    streamTabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                });
            });
            
            // Menu items functionality
            const menuItems = document.querySelectorAll('.menu-item');
            menuItems.forEach(item => {
                item.addEventListener('click', () => {
                    menuItems.forEach(i => i.classList.remove('active'));
                    item.classList.add('active');
                });
            });
            
            // Show notification
            function showNotification() {
                const notification = document.querySelector('.notification');
                notification.classList.add('show');
                
                setTimeout(() => {
                    notification.classList.remove('show');
                }, 3000);
            }
            
            // Save buttons functionality
            const saveButtons = document.querySelectorAll('.save-btn');
            saveButtons.forEach(button => {
                button.addEventListener('click', showNotification);
            });
            
            // Save all button
            document.getElementById('saveAllBtn').addEventListener('click', function() {
                showNotification();
            });
            
            // Calculate averages button
            document.getElementById('calculateBtn').addEventListener('click', function() {
                // Simulate calculation
                const notification = document.querySelector('.notification');
                notification.querySelector('span').textContent = 'Averages calculated successfully!';
                showNotification();
            });
            
            // Filter functionality
            const filterSelects = document.querySelectorAll('#classSelect, #streamSelect, #subjectSelect');
            filterSelects.forEach(select => {
                select.addEventListener('change', function() {
                    // Simulate API call to fetch new data
                    showNotification();
                    notification.querySelector('span').textContent = 'Data filtered successfully!';
                });
            });
        });
    </script>
</body>
